<%- include('../partials/head')-%>
<main class="flex min-h-screen flex-col">
    <div class="container m-auto mt-20">

        <div class="mb-40 mx-auto max-w-screen-lg">
            <%- content %>
        </div>


    </div>
    <footer class="bg-teal-700 text-white fixed left-0 right-0 bottom-0 h-20 flex justify-center items-center flex justify-between">
        <a href="<%- config.base %>/<%- lang %>/presentation/<%- name %>/<%- prev %>" class="p-6 order-1 text-xs">&#8592; Prev</a>
        <a href="<%- config.base %>/<%- lang %>/presentation/<%- name %>/<%- next %>" class="p-6 order-3 text-xs">Next &#8594;</a>
        <a href="<%- config.base %>/<%- lang %>/" class="text-center order-2 text-xs">Accessibility / Barrierefreiheit</a>
    </footer>
    <script>
        document.addEventListener('keydown', function (event) {

            if (event.ctrlKey && event.key === 'ArrowRight') {
                window.location.href="<%- config.base %>/presentation/<%- name %>/<%- next %>";
            }

            if (event.ctrlKey && event.key === 'ArrowLeft') {
                window.location.href="<%- config.base %>/presentation/<%- name %>/<%- prev %>";
            }
        });
    </script>
</main>
</body>
</html>



